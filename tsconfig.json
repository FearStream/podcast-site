{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"skipLibCheck": false,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"node",
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"resources/ts/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"resources/ts/shims-vue.d.ts",
		"resources/ts/shims-window.d.ts",
		"resources/ts/Jetstream/**/*.vue",
		"resources/ts/Pages/**/*.vue",
		"resources/ts/**/*",
		"resources/ts/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
